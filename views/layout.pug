doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
    link(rel="stylesheet", href="/css/bootstrap.min.css")
    script(src="/js/jquery-3.2.1.slim.min.js")
    script(src="/js/popper.min.js")
    script(src="/js/bootstrap.min.js")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
        a.navbar-brand(href='/') Bahay Pag-aasa Youth Center
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            if is_logged_in 
              li.nav-item
                a.nav-link(href="/") Residents
              li.nav-item
                a.nav-link(href="/reports/cases") Per Case
              li.nav-item
                a.nav-link(href="/reports/cities") Per City
              li.nav-item
                a.nav-link(href="/reports/referring-party") Per Referring Party

        if is_logged_in
          form.form-inline
            a.btn.btn-outline-light(href="/logout") Logout


    .container-fluid
    
      if msg && msg.success_message.length > 0
        div.alert.alert-success(role='alert')
          | #{msg.success_message[0]}
      block content